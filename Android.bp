        "aconfig-annotations-lib-sdk-none",
        "unsupportedappusage",
    ],
    sdk_version: "none",
    patch_module: "java.base",
    apex_available: [
        "com.android.conscrypt",
    ],
    min_sdk_version: "30",
    installable: false,
    visibility: ["//visibility:private"],
